---
// src/components/layout/AdminSidebar.astro
export interface Props {
  activePath?: string;
}

const { activePath = "/" } = Astro.props;

const menuItems = [
  { icon: "home", label: "Dashboard", href: "/admin" },
  { icon: "file-text", label: "Content", href: "/admin/content" },
  { icon: "users", label: "Users", href: "/admin/users" },
  { icon: "settings", label: "Settings", href: "/admin/settings" },
  { icon: "shield", label: "Security", href: "/admin/security" },
  { icon: "activity", label: "Monitoring", href: "/admin/monitoring" },
];
---

<aside class="w-64 bg-gray-900 text-white min-h-screen">
  <div class="p-6">
    <h2 class="text-xl font-bold">KOPMA Admin</h2>
  </div>
  <nav class="px-4">
    {menuItems.map((item) => (
      <a
        href={item.href}
        class={`flex items-center space-x-3 px-4 py-3 mb-2 rounded-lg transition-colors duration-200 ${
          activePath === item.href
            ? 'bg-gray-800 text-white'
            : 'text-gray-400 hover:bg-gray-800 hover:text-white'
        }`}
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
        </svg>
        <span>{item.label}</span>
      </a>
    ))}
  </nav>
</aside>
