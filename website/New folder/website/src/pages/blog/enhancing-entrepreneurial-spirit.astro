---

<BaseLayout title={pageTitle}>
  <div class="container mx-auto px-4 py-16">
    <div class="max-w-4xl mx-auto">
      <!-- Breadcrumb -->
      <nav class="mb-8 text-sm">
        <a href="/" class="text-green-600 hover:text-green-700">Beranda</a>
