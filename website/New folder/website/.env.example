# Environment Configuration for KOPMA UNNES Website
# Copy this file to .env and configure your values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_HOST=mysql
DB_NAME=kopma_db
DB_USER=kopma_user
DB_PASSWORD=your_secure_database_password_here
MYSQL_ROOT_PASSWORD=your_secure_mysql_root_password_here

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# =============================================================================
# ENCRYPTION CONFIGURATION
# =============================================================================
ENCRYPTION_KEY=your_secure_encryption_key_here_32_chars_minimum

# =============================================================================
# TELEGRAM BOT CONFIGURATION
# =============================================================================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# =============================================================================
# CLOUDFLARE CONFIGURATION
# =============================================================================
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token_here
CLOUDFLARE_ZONE_ID=your_cloudflare_zone_id_here

# =============================================================================
# DOMAIN CONFIGURATION
# =============================================================================
DOMAIN=kopmaukmunnes.com
SSL_EMAIL=admin@kopmaukmunnes.com

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================
NODE_ENV=production
VPS_MODE=true
ORACLE_CLOUD=true

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_URL=https://api.kopmaukmunnes.com

# =============================================================================
# ADMIN PANEL CONFIGURATION (OBFUSCATED)
# =============================================================================
# Generate secure admin URLs using: ./scripts/generate-admin-url.sh
# IMPORTANT: Keep these URLs SECRET! They provide admin access to your site.
# Format: Long, random combination of letters, numbers, and safe symbols
# Example: /a8Kz2-xY9w3-pQ7m/vR4t8Hn2Js/bF6x
ADMIN_URL_PATH=/GENERATE_USING_SCRIPT
ADMIN_SUBDOMAIN=kopma-admin-GENERATE_USING_SCRIPT
ADMIN_NETLIFY_URL=https://kopma-admin-GENERATE_USING_SCRIPT.netlify.app

# Legacy admin URL (deprecated - use ADMIN_URL_PATH instead)
ADMIN_URL=https://kopma-admin-xyz789.netlify.app

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# JWT Secret for authentication
JWT_SECRET=your_jwt_secret_here

# Session secret
SESSION_SECRET=your_session_secret_here

# CSRF secret
CSRF_SECRET=your_csrf_secret_here

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password_here
SMTP_FROM=KOPMA UNNES <noreply@kopmaukmunnes.com>

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,webp,pdf,doc,docx,xls,xlsx,ppt,pptx

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
MONITORING_ENABLED=true
LOG_LEVEL=info
LOG_FILE=/app/logs/application.log

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=/opt/kopma-website/backups

# =============================================================================
# IP ROTATION CONFIGURATION
# =============================================================================
IP_ROTATION_ENABLED=true
IP_ROTATION_INTERVAL=3600
IP_ROTATION_MAX_PER_DAY=24

# =============================================================================
# STEALTH DNS CONFIGURATION
# =============================================================================
STEALTH_DNS_ENABLED=true
STEALTH_DNS_SERVERS=1.1.1.1,1.0.0.1,8.8.8.8,8.8.4.4,9.9.9.9,9.9.9.10

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
CACHE_ENABLED=true
CACHE_TTL=3600
COMPRESSION_ENABLED=true
MINIFY_ENABLED=true

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
DEBUG=false
VERBOSE_LOGGING=false
HOT_RELOAD=false

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================
TEST_DATABASE=kopma_test_db
TEST_REDIS=kopma_test_redis
TEST_PORT=3001

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================
DOCKER_NETWORK=kopma-network
DOCKER_VOLUME_PREFIX=kopma-website

# =============================================================================
# NGINX CONFIGURATION
# =============================================================================
NGINX_WORKER_PROCESSES=auto
NGINX_WORKER_CONNECTIONS=1024
NGINX_KEEPALIVE_TIMEOUT=65

# =============================================================================
# PHP CONFIGURATION
# =============================================================================
PHP_MEMORY_LIMIT=256M
PHP_MAX_EXECUTION_TIME=30
PHP_UPLOAD_MAX_FILESIZE=10M
PHP_POST_MAX_SIZE=10M

# =============================================================================
# SSL CONFIGURATION
# =============================================================================
SSL_ENABLED=true
SSL_CERT_PATH=/etc/nginx/ssl/kopmaukmunnes.com.crt
SSL_KEY_PATH=/etc/nginx/ssl/kopmaukmunnes.com.key

# =============================================================================
# FIREWALL CONFIGURATION
# =============================================================================
FIREWALL_ENABLED=true
ALLOWED_IPS=127.0.0.1,::1
BLOCKED_IPS=

# =============================================================================
# RATE LIMITING CONFIGURATION
# =============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
CORS_ENABLED=true
CORS_ORIGINS=https://kopmaukmunnes.com,https://www.kopmaukmunnes.com
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization,X-Requested-With

# =============================================================================
# ANALYTICS CONFIGURATION
# =============================================================================
ANALYTICS_ENABLED=true
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
GOOGLE_TAG_MANAGER_ID=GTM_CONTAINER_ID

# =============================================================================
# SOCIAL MEDIA CONFIGURATION
# =============================================================================
FACEBOOK_APP_ID=your_facebook_app_id
TWITTER_HANDLE=@kopmaunnes
INSTAGRAM_HANDLE=@kopmaunnes
LINKEDIN_URL=https://linkedin.com/company/kopma-unnes

# =============================================================================
# NOTIFICATION CONFIGURATION
# =============================================================================
NOTIFICATION_ENABLED=true
NOTIFICATION_EMAIL=true
NOTIFICATION_SMS=false
NOTIFICATION_PUSH=false

# =============================================================================
# FEATURE FLAGS
# =============================================================================
FEATURE_ADMIN_PANEL=true
FEATURE_MONITORING=true
FEATURE_IP_ROTATION=true
FEATURE_STEALTH_DNS=true
FEATURE_BACKUP=true
FEATURE_ANALYTICS=true
FEATURE_NOTIFICATIONS=true